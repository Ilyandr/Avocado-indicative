<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="actionBarTheme">@style/ActionBar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorGeneralThemeApp</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorOnSurface">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorGeneralThemeApp</item>
        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabStyle">@style/AppTheme.TabLayout</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="BasicLayoutTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/colorGeneralThemeApp</item>
        <item name="boxStrokeColor">@color/colorGeneralThemeApp</item>
        <item name="hintTextColor">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="endIconTint">@color/colorGray</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="startIconTint">@color/colorGeneralThemeApp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
    </style>

    <style name="SecondLayoutTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/colorGeneralThemeApp</item>
        <item name="boxStrokeColor">@color/colorGeneralThemeApp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextColor">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="endIconTint">@color/colorGray</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="startIconTint">@color/colorGeneralThemeApp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
    </style>

    <style name="BasicButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/colorGeneralThemeApp</item>
        <item name="fontFamily">@font/nunito_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:bottomLeftRadius">8sp</item>
        <item name="android:bottomRightRadius">8sp</item>
        <item name="android:topLeftRadius">8sp</item>
        <item name="android:topRightRadius">8sp</item>
    </style>

    <style name="BarButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="ToolbarText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/color_type_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>

    <style name="LoadingDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorGeneralThemeApp</item>
    </style>

    <style name="SheetCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
        <item name="cardBackgroundColor">@color/primaryViewsColor</item>
    </style>

    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/colorGeneralThemeApp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="actionTextColorAlpha">1.0</item>
    </style>

    <style name="MaterialSnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/colorBottomBar</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:alpha">1.0</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorGeneralThemeApp</item>
        <item name="tabTextColor">@android:color/white</item>
    </style>

    <style name="BasicBarTitleStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">21sp</item>
    </style>
</resources>